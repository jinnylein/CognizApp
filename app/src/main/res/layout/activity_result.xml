<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <Button
        android:id="@+id/backButton"
        android:layout_width="160dp"
        android:layout_height="57dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="400dp"
        android:layout_marginStart="400dp"
        android:backgroundTint="@color/colorPri"
        android:text="Zurück zum Menü"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="439dp"
        android:layout_marginStart="439dp"
        android:layout_marginTop="50dp"
        android:text="TextView"
        android:textColor="@color/colorPriDark"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="370dp"
        android:layout_height="42dp"
        android:layout_marginEnd="417dp"
        android:layout_marginStart="418dp"
        android:layout_marginTop="60dp"
        android:text="Durchgang beendet."
        android:textAlignment="center"
        android:textColor="@color/colorPriDark"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="847dp"
        android:layout_height="30dp"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="50dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colorPriDark"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCorrect" />
</android.support.constraint.ConstraintLayout>